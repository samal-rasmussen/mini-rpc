{
	"name": "smolrpc",
	"version": "0.0.1",
	"description": "A smol typesafe rpc implementation over websockets",
	"repository": "samal-rasmussen/smolrpc",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./index.js"
		}
	},
	"files": [
		"index.js",
		"src",
		"types"
	],
	"types": "./types/index.d.ts",
	"scripts": {
		"build": "dts-buddy",
		"check": "tsc -w --noEmit",
		"deno-server": "deno run --watch --allow-net examples/deno-server/index.ts",
		"nodejs-client": "node --watch examples/nodejs-client/index.js",
		"nodejs-server": "node --watch examples/nodejs-server/index.js",
		"prepublish": "tsc --noEmit && publint",
		"publish-dry-run": "npm run prepublish && npm publish --registry https://registry.npmjs.org/ --access public --dry-run",
		"publish-for-real": "npm run prepublish && npm publish --registry https://registry.npmjs.org/ --access public"
	},
	"dependencies": {
		"zod": "3.21.4"
	},
	"devDependencies": {
		"@types/ws": "8.5.5",
		"dts-buddy": "0.1.9",
		"publint": "0.2.0",
		"smolrpc": "0.0.1",
		"typescript": "5.1.6",
		"ws": "8.13.0"
	}
}
